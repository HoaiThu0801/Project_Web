@model Project_Web.Models.Menu
<div class="button-popup">
    <button id="open-popup-dish-form" class="form-submit" onclick="openPopupDishForm()">Thêm món ăn</button>
    <table class="table table-hover">
        <tr>
            <th>StoreName</th>
            <th>Location</th>
            <th>PhoneNumber</th>
            <th>Email</th>
        </tr>
    </table>
</div>
<div class="signup-content-dish" id="signup-content-dish">
    <div class="signup-background-dish" id="signup-background-dish">
        <span class="remove-icon" id="close-popup-form" onclick="closePopupForm()">x</span>
        <form method="POST" action="/Administrator_Setting/CreateDish" id="signup-form-dish" class="signup-form">
            <h2 class="form-title">Tạo món ăn</h2>
            <div class="form-group">
                <input type="text" class="form-input" name="DishName" id="DishName" placeholder="DishName" />
            </div>
            <div class="form-group">
                <input type="text" class="form-input" id="Ingredient" name="Ingredient" placeholder="Ingredient" />
            </div>
            <div class="form-group">
                <input type="text" class="form-input" id="ImportPrice" name="ImportPrice" placeholder="ImportPrice" />
            </div>
            <div class="form-group">
                <input type="text" class="form-input" name="SalePrice" id="SalePrice" placeholder="SalePrice" />
            </div>
            <div class="form-group">
                <input type="submit" name="submit" id="submit" class="form-submit" value="Lưu món ăn" />
            </div>
            <div id="res"></div>
            <div class="textValidation" id="showSuccess">
                @ViewBag.Message
            </div>
        </form>
    </div>
</div>


