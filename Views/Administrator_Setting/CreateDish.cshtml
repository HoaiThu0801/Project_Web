@{
    ViewBag.Title = "Tạo món ăn";
}
@model Project_Web.Models.Menu
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/Content/CreateDish.css">
</head>
<body>
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <form method="POST" id="signup-dish-form" action="/Administrator_Setting/CreateDish" class="signup-form">
                        <h2 class="form-title">Tạo món ăn</h2>
                        <div class="form-group">
                            <input type="text" class="form-input" name="DishName" id="DishName" placeholder="Nhập tên món ăn" required />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" id="Ingredient" name="Ingredient" placeholder="Nhập thành phần món ăn" required />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" id="ImportPrice" name="ImportPrice" placeholder="Nhập giá nhập" required min="20000" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="SalePrice" id="SalePrice" placeholder="Nhập giá bán" />
                        </div>
                        <div class="form-group">
                            <label for="Image" class="form-input text-center"><i class="fa fa-upload">Chọn hình ảnh</i></label>
                            <input type="file" accept="image/*" class="form-input" name="Image" id="Image" onchange="readURL(event);" style="display: none;" />

                        </div>
                        <div class="form-group file" id="file" style="display: none">
                            <div class="form-input-img-btn file">
                                <img id="showImage" class="image" />
                                <a class="remove-img" id="remove-img" onclick="reset($('#Image'))"><i class="fa fa-trash">Xóa</i></a>
                            </div>
                        </div>
                        <div class="form-group">
                            <select class="custom-select" id="SelectCategory" name="Category">
                                <option disabled selected>Phân loại</option>
                                <option value="Cá">Cháo cá</option>
                                <option value="Thịt">Cháo thịt</option>
                                <option value="Rau">Cháo chay</option>
                                <option value="Hải sản">Cháo hải sản</option>
                                <option value="Ăn liền">Cháo ăn liền</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Lưu món ăn" />
                        </div>
                        <div id="res"></div>
                    </form>
                    <div class="form-group">
                        <label for="Excel" class="form-input text-center"><i class="fa fa-upload">Chọn file excel</i></label>
                        <input type="file" class="form-input" name="Excel" id="Excel" style="display: none;" />
                    </div>
                    <div class="form-group">
                        <div class="excel">
                            <a href="#" class="excelImport">Thêm vào database</a>
                            <a href="#" class="excelImport">Tải về</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/CreateDish.js"></script>
</body>
