@{
    ViewBag.Title = "Tạo món ăn";
}
@model Project_Web.Models.Menu
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/Content/CreateDish.css">
</head>
<body>
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <form method="POST" id="signup-dish-form" action="/Administrator_Setting/CreateDish" class="signup-form">
                        <h2 class="form-title">Tạo món ăn</h2>
                        <div class="form-group">
                            <input type="text" class="form-input" name="DishName" id="DishName" placeholder="DishName" />
                        </div>
                        @Html.ValidationMessageFor(m => m.DishName)
                        <div class="form-group">
                            <input type="text" class="form-input" id="Ingredient" name="Ingredient" placeholder="Ingredient" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" id="ImportPrice" name="ImportPrice" placeholder="ImportPrice" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="SalePrice" id="SalePrice" placeholder="SalePrice" />
                        </div>
                        <div class="form-group">
                            <label for="Image" class="form-input text-center"><i class="fa fa-upload">Select File</i></label>
                            <input type="file" accept="image/*" class="form-input" name="Image" id="Image" onchange="readURL(event);" style="display: none;"/>
                        </div>
                        <div class="form-group file" id="file" style="display: none">
                            <div class="form-input-img-btn file">
                                <img id="showImage" class="image" />
                                <a class="remove-img" id="remove-img" onclick="reset($('#Image'))"><i class="fa fa-trash">Remove</i></a>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Lưu món ăn" />
                        </div>
                        <div id="res"></div>
                    </form>
                </div>
            </div>
        </section>
    </div>
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/CreateDish.js"></script>
</body>
