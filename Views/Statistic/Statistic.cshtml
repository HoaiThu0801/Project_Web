@{ 
    ViewBag.Title = "Thống kê";
}
<head>
    <!-- stylesheets -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/StatisticPage.css" rel="stylesheet" type="text/css" />

    <!-- scripts -->
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="~/Scripts/Statistic.js"></script>
</head>
<body>
    <!-- header -->
    <div class="header">
        <div class="row">
            <div class="col-md-4">
                <a href="/Home/Index"><img src="~/images/logo.gif" class="image-logo" /></a>
            </div>
            <div class="col-md-4">
                <h2 class="text-center">Cửa hàng bán cháo | Thống kê</h2>
            </div>
            <div class="col-md-4 progress-bar-design">
            </div>
        </div>
    </div>
    <!-- /header -->
    <!-- sidebar -->
    <div class="container-statistic">
        <div id="sidebar" class="sidebar-toggle">
            <ul class="nav nav-sidebar">
                <li>
                    <a href="/">
                        <i class="fa fa-home" aria-hidden="true"></i>
                        <span>Trang chủ</span>
                    </a>
                </li>
                <li data-toggle="collapse" aria-expanded="true" aria-controls="chart-types" id="statistic">
                    <a>
                        <i class="fa fa-area-chart" aria-hidden="true" style="width: 13px;"></i>
                        <span>Thống kê</span>
                    </a>
                </li>
                <li id="charttypes">
                    <ul class="sub-menu">
                        <li><a class="tablinks" onclick="openChartStatistic(event, 'QuantityImport')" id="tabQuantityImport">Thống kê tổng sản phẩm</a></li>
                        <li><a class="tablinks" onclick="openChartStatistic(event, 'ReveneuProduct')" id="tabReveneuProduct">Tổng doanh thu của từng cửa hàng</a></li>
                        <li><a class="tablinks" onclick="openChartStatistic(event, 'TotalNumberofProducts')" id="tabTotalNumberofProducts">Phần trăm loại cháo trong menu</a></li>
                        <li><a class="tablinks" onclick="openChartStatistic(event, 'Top5BestSellerPorridge')" id="tabTop5BestSellerPorridge">Top 5 sản phẩm bán chạy nhất</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="content">
            <div class="tabcontent" id="QuantityImport" style="display: block">
                @Html.Partial("~/Views/Statistic/Statistic_QuantityImportProduct.cshtml")
            </div>
            <div class="tabcontent" id="ReveneuProduct">
                @Html.Partial("~/Views/Statistic/Statistic_ReveneuProduct.cshtml")
            </div>
            <div class="tabcontent" id="TotalNumberofProducts">
                @Html.Partial("~/Views/Statistic/Statistic_TotalNumberofProduct.cshtml")
            </div>
            <div class="tabcontent" id="Top5BestSellerPorridge">
                @Html.Partial("~/Views/Statistic/Statistic_Top5BestSellerPorridge.cshtml")
            </div>
        </div>
    </div>

</body>