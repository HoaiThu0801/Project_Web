<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/porridge.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="~/Content/footer.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #AlertBoxforJS {
            position: absolute;
            left: 40%;
            top: 2%;
            z-index: 999999;
        }

        #AlertBoxforController {
            position: absolute;
            left: 40%;
            top: 2%;
            z-index: 999999;
        }

        .fa-exclamation-circle:before {
            margin-right: 5px;
        }

        .fa-check-circle:before {
            margin-right: 5px;
        }

        .fa-check-circle {
            color: green;
        }

        .fa-exclamation-circle {
            color: red;
        }

        .Title {
            font-size: 18px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .text-center-div {
            text-align: center;
        }
    </style>
</head>
<body>
    @{
        if (TempData["AlertMessage"] != null)
        {
            <div id="AlertBoxforController" class="alert animate__animated animate__bounceInDown @TempData["AlertType"] hide">
                <div class="Title text-center">
                    <i id="IconBox" class="@TempData["AlertIcon"]"></i>@TempData["AlertTitle"]
                </div>
                <div class="message" id="message">
                    @TempData["AlertMessage"]
                </div>
            </div>
        }
    }
    <div id="Alert">
        <div id="AlertBoxforJS" class="hide">
            <div class="Title text-center-div">
                <i id="IconBox" class=""></i>
            </div>
            <div class="message" id="messageJS">
            </div>
        </div>
    </div>
    <script>
        function notify(t, m, ty) {
            var title = t;
            var message = m;
            var type = ty;

            $('#messageJS').html(message);
            if (type == true) {
                $('#AlertBoxforJS').addClass("alert animate__animated animate__bounceInDown alert-success");
                $('.Title').html('<i id="IconBox" class="fa fa-check-circle"></i>' + title);
                $('#AlertBoxforJS').removeClass('hide');
                $('#AlertBoxforJS').delay(1700).slideUp(200);
            }
            else {
                $('#AlertBoxforJS').addClass("alert animate__animated animate__bounceInDown alert-danger");
                $('.Title').html('<i id="IconBox" class="fas fa-exclamation-circle"></i>' + title);
                $('#AlertBoxforJS').removeClass('hide');
                $('#AlertBoxforJS').delay(1700).slideUp(200);
            }
            setTimeout(function () {
                $('#Alert').load(' #AlertBoxforJS');
            }, 2000)
        }
    </script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/sb-admin-2.js"></script>
    @RenderBody()
    @Scripts.Render("~/bundles/bootstrap")

</body>
